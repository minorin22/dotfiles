{
  "theme": "Monokai",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 15,
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "ui_font_family": "System UI",
  "tab_size": 2,
  "format_on_save": "off",
  "autosave": "on_focus_change",
  "vim_mode": false,
  "terminal": {
    "font_family": "JetBrains Mono",
    "font_size": 14,
    "shell": {
      "program": "/opt/homebrew/bin/zsh"
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"]
    }
  }
}
